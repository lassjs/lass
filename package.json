{
  "name": "lass",
  "description": "Lass scaffolds a modern package boilerplate for Node.js",
  "version": "2.0.4",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
  "ava": {
    "failFast": true,
    "verbose": true,
    "files": [
      "test.js",
      "test-*.js",
      "test/**/*.js",
      "**/__tests__/**/*.js",
      "**/*.test.js",
      "template/test.js",
      "template/test-*.js",
      "template/test/**/*.js",
      "template/**/__tests__/**/*.js",
      "template/**/*.test.js"
    ],
    "helpers": [
      "template/test/helpers/**/*"
    ]
  },
  "bin": "cli.js",
  "bugs": {
    "url": "https://github.com/lassjs/lass/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com)",
    "Pablo Varela (http://pablo.life)",
    "Shaun Warman <shaunwarman1@gmail.com> (http://shaunwarman.com)"
  ],
  "dependencies": {
    "cac": "^6.5.3",
    "camelcase": "^5.3.1",
    "cross-spawn": "^7.0.1",
    "execa": "^3.4.0",
    "fixpack": "^2.3.1",
    "github-username": "^5.0.1",
    "github-username-regex": "^1.0.0",
    "global": "^4.4.0",
    "is-email": "^1.0.0",
    "is-url": "^1.2.4",
    "is-valid-npm-name": "^0.0.4",
    "npm-conf": "^1.1.3",
    "sao": "0.x",
    "semver": "^6.3.0",
    "shelljs": "^0.8.3",
    "spdx-license-list": "^6.1.0",
    "speakingurl": "^14.0.1",
    "superb": "^4.0.0",
    "update-notifier": "^3.0.1",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-config-xo-lass": "^1.0.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nyc": "^14.1.1",
    "remark-cli": "^7.0.1",
    "remark-preset-github": "^0.0.16",
    "xo": "^0.25.3"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "homepage": "https://lass.js.org",
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "ava",
    "boilerplate",
    "codecov",
    "es6",
    "es7",
    "flavored",
    "generator",
    "gfm",
    "github",
    "lass",
    "license",
    "license-generator",
    "markdown",
    "module",
    "np",
    "npm",
    "nyc",
    "package",
    "prettier",
    "project",
    "remark",
    "sao",
    "scaffold",
    "spdx",
    "starter",
    "xo",
    "yeoman"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "sao.js",
  "nyc": {
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lassjs/lass"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "ignores": [
      "config.js"
    ]
  }
}
